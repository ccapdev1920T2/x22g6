<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/styles/components.css">
    <link rel="stylesheet" type="text/css" href="/styles/layout.css">
    <link rel="stylesheet" type="text/css" href="/styles/navigation.css">
    <link rel="stylesheet" type="text/css" href="/styles/forms.css">
    <script type="text/javascript" src="/scripts/modules/jquery-3.4.1.min.js"></script> 
    <script type="text/javascript" src="/scripts/modules/modal.js"></script>
    <script type="text/javascript" src="/scripts/modules/validation.js"></script>
    <script type="text/javascript" src="/scripts/time-slot.js"></script>
    <title>My Reservations</title>
</head>
<body class="nav-side">
    {{> reservation_modal}}
    {{> deletion_confirmation_modal}}
    {{> buffer_modal}}
    {{> navbar}}

    <div class="nav-side__main-section">
        <div class="nav-side__sidebar-section">
            {{> sidebar_regular}}
        </div>
        <div class="nav-side__content-section">
            <!-- Today's Reservation -->
            <div class="container container--fill container--bordered">
                <div class="container__header-section">
                    <h2 class="container__title">Today's Reservation</h2>
                </div>
                <div class="container__content-section" id="time-slots-today">
                    {{#each reservationsToday}}
                        <div class="time-slot time-slot--{{scheduleId.origin}}-to-{{scheduleId.destination}} time-slot--fill" data-reservation-date="{{date}}" data-reservation-time="{{scheduleId.time}}">
                            <span class="time-slot__delete modal-toggle" data-modal-target="deletion-confirmation-modal">&times;</span>
                            <p><strong class="time-slot__location">{{scheduleId.origin}}</strong> to <strong class="time-slot__location">{{scheduleId.destination}}</strong></p>
                            <p>{{scheduleId.time12Hour}}</p>
                        </div>
                    {{/each}}
                </div>
            </div>
            <br><br>
            <!-- All Reservations -->
            <div class="container container--fill container--bordered">
                <div class="container__header-section">
                    <h2 class="container__title">My Reservations</h2>
                </div>
                <div class="container__content-section">
                    <div class="calendar" id="time-slots-future">
                        {{#each futureReservations}}
                            <div class="calendar__month-reservations">
                                <p class="calendar__month-name">{{month}} {{year}}</p>
                                {{#each dayReservations}}
                                    <div class="calendar__day-reservations">
                                        <div class="calendar__day-info">
                                            <p class="calendar__day-number">{{day}}</p>
                                            <p>{{week}}</p>
                                        </div>
                                        <div class="calendar__time-slots">
                                            {{#each reservations}}
                                                <div class="time-slot time-slot--{{scheduleId.origin}}-to-{{scheduleId.destination}} time-slot--fill" data-reservation-date="{{date}}" data-reservation-time="{{scheduleId.time}}">
                                                    <span class="time-slot__delete modal-toggle" data-modal-target="deletion-confirmation-modal">&times;</span>
                                                    <p><strong class="time-slot__location">{{scheduleId.origin}}</strong> to <strong class="time-slot__location">{{scheduleId.destination}}</strong></p>
                                                    <p>{{scheduleId.time12Hour}}</p>
                                                </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>