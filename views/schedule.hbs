<!DOCTYPE html>
<html>

<head>
    <title>Arrow's Express Schedule</title>
    <link type="text/css" rel="stylesheet" href="/styles/components.css">
    <link type="text/css" rel="stylesheet" href="/styles/navigation.css">
    <link type="text/css" rel="stylesheet" href="/styles/layout.css">
    <link type="text/css" rel="stylesheet" href="/styles/forms.css">
    <link type="text/css" rel="stylesheet" href="/styles/table.css">
    <script type="text/javascript" src="/scripts/modules/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="/scripts/modules/validation.js"></script>
    <script type="text/javascript" src="/scripts/modules/modal.js"></script>
    <script type="text/javascript" src="/scripts/schedule.js"></script>

</head>

<body class="nav-side">
    {{#if (isStaff user.type)}}
        {{> check_in_modal}}
    {{else}}
        {{> reservation_modal}}
    {{/if}}
    {{> buffer_modal}}
    {{> navbar}}
    <div class="nav-side__main-section">
        <div class="nav-side__sidebar-section">
            {{#if (isStaff user.type)}}
                {{> sidebar_admin}}
            {{else}}
                {{> sidebar_regular}}
            {{/if}}
        </div>
        <div class="nav-side__content-section">
            <div class="container container--bordered container--fill">
                <div class="container__header-section">
                    <h2 class="container__title">Arrows Express Schedule</h2>
                </div>
                <div class="container__content-section container__content-section--heavy-padding">
                    <div class="table table--full">
                        <form class="form  table__filters" id="schedule-filters">
                            <label for="schedule-filters__date" class="form__label">Date:</label>
                            <input type="date" id="schedule-filters__date" class="form__input form__input--xs" value="{{getCurrentDate}}">

                            <label for="schedule-filters__trip" class="form__label">Trip:</label>
                            <select id="schedule-filters__trip" class="form__input form__input--xs">
                                <option value="LAG_TO_MNL">Laguna to Manila</option>
                                <option value="MNL_TO_LG">Manila to Laguna</option>
                            </select>
                        </form>

                        <div class="table__content" id="schedule-table">
                            <table>
                                <thead class="table__heading">
                                    <tr>
                                        <th>Time</th>
                                        <th>Open Premium Slots</th>
                                        <th>Open Regular Slots</th>
                                    </tr>
                                </thead>

                                <tbody class="table__body">
                                    <tr>
                                        <td>6:00 AM</td>
                                        <td>1 / 5</td>
                                        <td>3 / 25</td>
                                    </tr>
                                    <tr>
                                        <td>7:30 AM</td>
                                        <td>2 / 5</td>
                                        <td>1 / 25</td>
                                    </tr>
                                    <tr>
                                        <td>9:30 AM</td>
                                        <td>5 / 5</td>
                                        <td>3 / 25</td>
                                    </tr>
                                    <tr>
                                        <td>11:00 AM</td>
                                        <td>3 / 5</td>
                                        <td>3 / 25</td>
                                    </tr>
                                    <tr>
                                        <td>1:00 PM</td>
                                        <td>5 / 5</td>
                                        <td>20 / 25</td>
                                    </tr>
                                    <tr>
                                        <td>2:30 PM</td>
                                        <td>2 / 5</td>
                                        <td>3 / 25</td>
                                    </tr>
                                    <tr>
                                        <td>3:30 PM</td>
                                        <td>1 / 5</td>
                                        <td>3 / 25</td>
                                    </tr>
                                    <tr>
                                        <td>5:00 PM</td>
                                        <td>1 / 5</td>
                                        <td>6 / 25</td>
                                    </tr>
                                    <tr>
                                        <td>6:15 PM</td>
                                        <td>1 / 5</td>
                                        <td>4 / 25</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
</html>