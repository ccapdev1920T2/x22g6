                            <input type="date" id="date" class="form__input form__input--xs">

                            <label for="trip" class="form__label">Trip:</label>
                            <select id="trip" class="form__input form__input--xs">
                                <option>Laguna to Manila</option>
                                <option>Manila to Laguna</option>
                            </select>
                        </form>

                        <div class="table__content">
                            <table>
                                <thead class="table__heading">
                                    <tr>
                                        <th>Time</th>
                                        <th>Premium Slots</th>
                                        <th>Regular Slots</th>
                                    </tr>
                                </thead>

                                <tbody class="table__body">
                                    <tr>
                                        <td>6:00 AM</td>
                                        <td>1 / 5</td>
                                        <td>3 / 25</td>
                                    </tr>
                                    <tr>
                                        <td>7:30 AM</td>
