<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="/styles/components.css">
    <link rel="stylesheet" type="text/css" href="/styles/layout.css">
    <link rel="stylesheet" type="text/css" href="/styles/navigation.css">
    <link rel="stylesheet" type="text/css" href="/styles/forms.css">
    <script type="text/javascript" src="/scripts/modules/jquery-3.4.1.min.js"></script>    
    <script type="text/javascript" src="/scripts/modules/validation.js"></script>
    <script type="text/javascript" src="/scripts/modules/modal.js"></script>
    <script type="text/javascript" src="/scripts/edit-profile.js"></script>

	<title>Profile</title>
</head>
<body class="nav-side">
    {{#if (isStaff user.type)}}
        {{> check_in_modal}}
    {{else}}
        {{> reservation_modal}}
    {{/if}}
    {{> change_password_modal}}
    {{> buffer_modal}}
    {{> navbar}}

	<div class="nav-side__main-section">
		<div class="nav-side__sidebar-section">
            {{#if (isStaff user.type)}}
                {{> sidebar_admin}}
            {{else}}
                {{> sidebar_regular}}
            {{/if}}
        </div>

        <div class="nav-side__content-section">
        	<div class="container container--padded container--fill">
                <form action="profile" class="form" id="edit-profile-form" method="POST">
                    <div class="form__header">
                        <h2 class="container__title container__title--bg">Profile</h2>
                    </div>

                    <div class="form__input-group">
                        <div>
                            <label for="edit-profile-form__first-name" class="form__label">First Name</label>
                            <input type="text" id="edit-profile-form__first-name" name="first-name" class="form__input textonly editable required" value="{{user.firstName}}" disabled>
                        </div>

                        <div>
                            <label for="edit-profile-form__last-name" class="form__label">Last Name</label>
                            <input type="text" id="edit-profile-form__last-name" name="last-name" class="form__input textonly editable required" value="{{user.lastName}}" disabled>
                        </div>
                    </div>

                    <label for="edit-profile-form__email" class="form__label">DLSU Email</label>
                    <input type="email" id="edit-profile-form__email" name="email" class="form__input editable required email" value="{{user.email}}" disabled>

                    <label for="edit-profile-form__id-number" class="form__label">ID Number</label>
                    <input type="text" id="edit-profile-form__id-number" name="id-number" class="form__input numonly" value="{{user._id}}" disabled>
                    
                    <div class="form__footer form__footer--end-horizontal">
                        <button type="button" class="modal-toggle button" data-modal-target="change-password-modal" id="change-password-toggle">Change Password</button>
                    	<button type="reset" class="button" id="cancel-edit-profile" style="display:none">Cancel</button>
                        <button type="button" class="button" id="edit-profile-toggle">Edit Profile</button> 
                        <button type="submit" class="button" id="edit-profile-save" style="display:none;">Save</button>

                    </div>
                </form>
            </div>
        </div>
	</div>
</body>
</html>

	