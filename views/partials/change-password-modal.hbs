<div class="modal modal--hidden" id="change-password-modal">
    <div class="modal__content">
        <div class="modal__close modal__close--upper-right-x">&times;</div>
        <div class="container container--padded container--fill">
            <form class="form" id="change-password-form">
                <div class="form__header form__header--start-centered-horizontal">
                    <h2 class="form__title">Change Password</h2>
                </div>

                <label for="change-password-form__old-password" class="form__label">Old Password</label>
                <input type="password" name="old-password" id="change-password-form__old-password" class="form__input required">

                <div class="form__input-group">
                    <div>
                        <label for="change-password-form__new-password" class="form__label">New Password</label>
                        <input type="password" name="new-password" id="change-password-form__new-password" class="form__input required" data-equal-with="change-password-form__confirm-password" data-err-message="*Passwords do not match">
                    </div>
                    <div>
                        <label for="change-password-form__confirm-password" class="form__label">Confirm Password</label>
                        <input type="password" id="change-password-form__confirm-password" class="form__input required"  data-equal-with="change-password-form__new-password" data-err-message="*Passwords do not match">
                    </div>
                </div>
                <div class="form__footer form__footer--end-horizontal">
                    <button type="submit" class="button">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>